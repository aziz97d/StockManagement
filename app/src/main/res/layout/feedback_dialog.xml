<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/background_shape"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/close_image_button"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close"
                />
            <TextView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="FeedBack"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="#ffff"
                />
            <EditText
                android:id="@+id/feedback_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_person"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <EditText
                android:id="@+id/feedback_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>
            <EditText
                android:id="@+id/feedback_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColorHint="#ffff"
                android:layout_marginTop="10dp"
                android:hint="Message"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_message"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <Button
                android:id="@+id/btn_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/save_button_shape"
                android:textColor="#f16f7d"
                android:text="Send"
                android:textAllCaps="false"
                android:clickable="true"
                android:padding="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                />
            <Button
                android:id="@+id/btn_clear_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/show_button_shape"
                android:textColor="#ffffff"
                android:text="Clear"
                android:textAllCaps="false"
                android:clickable="true"
                android:padding="16dp"
                android:layout_marginBottom="15dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                />


        </LinearLayout>

    </ScrollView>


</LinearLayout>