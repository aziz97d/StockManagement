<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    >
    <ImageView
        android:id="@+id/close_image_button"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:layout_gravity="right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Setup"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_category" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            >

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_company" />

        <Spinner
            android:id="@+id/company_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            >

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_item" />

        <EditText
            android:id="@+id/item_name_id"
            android:hint="Item Name"
            android:textColorHint="#ffff"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stock_in_list" />

        <EditText
            android:id="@+id/reorder_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColorHint="#ffff"
            android:hint="Reorder Level"
            android:paddingLeft="10dp"

            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_save_item"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:background="@drawable/save_button_shape"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#c54bc7"
        android:textSize="18sp"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>