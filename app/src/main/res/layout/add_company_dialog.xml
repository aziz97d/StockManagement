<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialog_background"
    >
    <ImageView
        android:id="@+id/close_image_button"
        android:layout_gravity="right"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Setup"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_add_company"
            android:layout_width="50dp"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/edt_add_company"
            android:hint="Enter Company"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColorHint="#ffff"
            android:background="@android:color/transparent"
            android:layout_width="200dp"
            android:layout_height="40dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_save_company"
        android:text="Save"
        android:background="@drawable/save_button_shape"
        android:layout_marginTop="25dp"
        android:textColor="#b464cf"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="18sp"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        />
    <Button
        android:layout_marginBottom="50dp"
        android:id="@+id/btn_show_company"
        android:text="Show All Company"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/show_button_shape"
        android:textAllCaps="false"
        android:textSize="18sp"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="#ffff"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
</LinearLayout>